<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/green_global_color</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/green_actionbar_color</item>
        <item name="background">@color/green_actionbar_color</item>
    </style>

    <style name="RedTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/red_global_color</item>
        <item name="android:activatedBackgroundIndicator">@drawable/red_drawer_list_selector</item>
        <item name="android:actionBarStyle">@style/MyActionBarRed</item>
        <item name="actionBarStyle">@style/MyActionBarRed</item>
    </style>

    <style name="MyActionBarRed" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/red_actionbar_color</item>
        <item name="background">@color/red_actionbar_color</item>
    </style>

    <style name="BlueTheme">
        <item name="android:background">#B0E0E6</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
